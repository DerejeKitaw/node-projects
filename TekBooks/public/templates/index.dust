{>"layouts/master" /}

{<body}
    {#books}
    	<div class="large-3 columns book">
    		<img class='thumbnail' src="/img/{.cover}" alt="">
    		<h4>{.title}</h4>
    		<p>{.truncText}</p>
    		<div class="price">Buy for <span>${.price}</span></div>
    		<br>
    		<a href="/books/details/{._id}" class='button small'>Book details</a>
    	</div>
    {/books}
{/body}
